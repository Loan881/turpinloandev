<script>
  // Mini galerie
  document.querySelectorAll('.thumb').forEach(btn => {
    btn.addEventListener('click', () => {
      document.querySelectorAll('.thumb').forEach(b => b.setAttribute('aria-current','false'));
      btn.setAttribute('aria-current','true');
      document.getElementById('main-img').src = btn.querySelector('img').src;
    });
  });

  // Onglets
  document.querySelectorAll('.tab-btn').forEach(t => {
    t.addEventListener('click', () => {
      document.querySelectorAll('.tab-btn').forEach(b => b.setAttribute('aria-selected','false'));
      t.setAttribute('aria-selected','true');
      const id = t.dataset.tab;
      document.querySelectorAll('.tab-pane').forEach(p => p.setAttribute('aria-hidden','true'));
      document.getElementById('tab-'+id).setAttribute('aria-hidden','false');
    });
  });

  // Prix dynamique selon variante
  const basePrice = 39; // prix A3
  const priceEl = document.querySelector('.price');
  const variantEl = document.getElementById('variant');
  variantEl.addEventListener('change', () => {
    const diff = Number(variantEl.selectedOptions[0].dataset.diff || 0);
    priceEl.textContent = (basePrice + diff) + ' \u20AC';
  });

  // Panier localStorage compatible avec le starter (id, qty, variantId)
  const PRODUCT_ID = 'affiche-soleil-a3';
  document.getElementById('add-to-cart').addEventListener('click', () => {
    const qty = Math.max(1, parseInt(document.getElementById('qty').value || '1', 10));
    const variantId = variantEl.value; // 'a3' | 'a2'
    const cart = JSON.parse(localStorage.getItem('cart') || '[]');
    const found = cart.find(l => l.id === PRODUCT_ID && l.variantId === variantId);
    if (found) found.qty += qty; else cart.push({ id: PRODUCT_ID, qty, variantId });
    localStorage.setItem('cart', JSON.stringify(cart));
    alert('Ajouté au panier.');
  });

  // Bouton acheter maintenant — remplace par ton Stripe Payment Link
  document.getElementById('buy-now').addEventListener('click', (e) => {
    const variantId = variantEl.value;
    // Exemple : liens différents selon la variante (à remplacer par tes Payment Links)
    const links = {
      a3: 'https://buy.stripe.com/TON_LINK_A3',
      a2: 'https://buy.stripe.com/TON_LINK_A2'
    };
    const url = links[variantId] || '#';
    if (url === '#') { e.preventDefault(); alert('Lien de paiement à configurer.'); }
    else { e.currentTarget.href = url; }
  });

  // Marquer Merchandising comme actif dans la nav (optionnel)
  document.querySelectorAll('.drawer-nav .nav-link, .footer-links .nav-link').forEach(a => {
    if (a.textContent.trim().toLowerCase().includes('merchandising')) {
      a.style.textDecoration = 'underline';
    }
  });
</script>
